.search-movie
  display: flex
  flex-direction: row
  justify-content: space-around
  padding: 12px
  input
    margin-right: 2px
  i
    font-size: 20px
  .btn-success
    background var(--bg-menu)
    color: black
    &:hover
      background: var(--azul)
    #btn-agregar
      z-index: 1

.options
  width 100%

.box
  border-radius 10px
  box-shadow 0px 0px 10px #ccc
  padding 5px
  margin-top: 5px
.movie
  display flex
  flex-direction row
  width 100% 
  height 100vh
  background-color #fff
  cursor pointer
  img
    width 400px
    height 600px
  .detalles
    display flex
    flex-direction column
    padding 10px
    .title
      font-size 50px
    .sinopsis
      font-size: 18px
      font-weight: bold
    span 
      font-size: 15px
    .categorias
      padding: 12px
      margin-top: 5px
      background-color: var(--bg-menu)
      color: black
      .etiquetas
        i
          display: inline-block
          padding: 5px
          background-color: var(--azul)
          color var(--bg-menu)
          border-radius: 5px
          margin: 2px
      .header
        display: flex
        justify-content: space-between
        font-weight: bold
        font-size: 20px
        margin-botoom: 15px
    
  .link
    padding: 12px
    margin-top: 5px
    background-color: var(--bg-menu)
    color: black
    .header
      display: flex
      justify-content: space-between
      font-weight: bold
      font-size: 20px
      margin-botoom: 15px
    

